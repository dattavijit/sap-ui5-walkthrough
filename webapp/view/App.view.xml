<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0" >
	
	<Shell >
		<App class="myAppDemoWT">
			<pages>
				<Page title="{i18n>homePagetitle}">
					<content>
						<Panel headerText="{i18n>panelHeaderText}"
								class="sapUiResponsiveMargin"
								width="auto">
							<content>
								<Button id="idSayHiButton" text="{i18n>showHelloButtonText}" 
										press=".onSayHiButtonPress"
										class="myCustomButton"/>
								<Input value="{/recipient/name}"  valueLiveUpdate="true" width="60%" />
								<FormattedText htmlText="Hello {/recipient/name}!" 
											   class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"></FormattedText>
								</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>